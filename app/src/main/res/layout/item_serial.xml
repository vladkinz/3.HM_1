<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_img"
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/img_serial"
            android:layout_width="70dp"
            android:layout_height="120dp"
            tools:background="@mipmap/ic_launcher" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Chernobyl"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/card_img"
        app:layout_constraintTop_toTopOf="@id/card_img" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S1.E5"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon,Jun 3,2019"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/tv_episode"
        app:layout_constraintTop_toBottomOf="@id/tv_episode" />

    <TextView
        android:id="@+id/tv_days"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/circle_background"
        android:text="1\nDay"
        android:gravity="center"
        android:textColor="#000000"
        android:elevation="4dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />



</androidx.constraintlayout.widget.ConstraintLayout>